<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<property name="now" value="now()" dbms="mysql,h2" />
	<property name="now" value="current_timestamp" dbms="postgresql" />
	<property name="now" value="sysdate" dbms="oracle" />
	<property name="now" value="GETDATE()" dbms="mssql" />

	<property name="autoIncrement" value="true"
		dbms="mysql,h2,postgresql,oracle,mssql" />

	<changeSet id="00000000000000" author="inacio" dbms="postgresql,oracle">
		<createSequence sequenceName="hibernate_sequence"
			startValue="1000" incrementBy="1" />
	</changeSet>

	<changeSet id="00000000000001" author="inacio">
		<createTable tableName="user">
			<column name="id" type="bigint" autoIncrement="${autoIncrement}">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="password_hash" type="varchar(60)" />
			<column name="first_name" type="varchar(50)" />
			<column name="last_name" type="varchar(50)" />
			<column name="email" type="varchar(100)">
				<constraints unique="true" nullable="false" />
			</column>
			<column name="activated" type="boolean" valueBoolean="false">
				<constraints nullable="false" />
			</column>
			<column name="lang_key" type="varchar(5)" />
		</createTable>

		<createIndex indexName="idx_user_email" tableName="user" unique="true">
			<column name="email" type="varchar(100)" />
		</createIndex>

		<loadData encoding="UTF-8" file="db/data/import/users.csv"
			separator=";" tableName="user">
			<column name="activated" type="boolean" />
		</loadData>
	</changeSet>

</databaseChangeLog>
